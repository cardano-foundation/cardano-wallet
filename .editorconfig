root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[stack.yaml]
trim_trailing_whitespace = false

[*.hs]
indent_size = 4
max_line_length = 80

[*.nix]
indent_size = 2
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
