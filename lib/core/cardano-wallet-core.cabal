name:                cardano-wallet-core
version:             2019.5.8
synopsis:            The Wallet Backend for a Cardano node.
description:         Please see README.md
homepage:            https://github.com/input-output-hk/cardano-wallet
author:              IOHK Engineering Team
maintainer:          operations@iohk.io
copyright:           2019 IOHK
license:             MIT
license-file:        LICENSE
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

flag development
    description: Disable `-Werror`
    default: False
    manual: True

library
  default-language:
      Haskell2010
  default-extensions:
      NoImplicitPrelude
      OverloadedStrings
  ghc-options:
      -Wall
      -Wcompat
      -fwarn-redundant-constraints
  if (!flag(development))
    ghc-options:
      -Werror
  build-depends:
      aeson
    , base
    , base58-bytestring
    , basement
    , bytestring
    , cardano-crypto
    , containers
    , cryptonite
    , deepseq
    , exceptions
    , fmt
    , generic-lens
    , http-api-data
    , http-media
    , memory
    , path-pieces
    , persistent
    , persistent-sqlite
    , persistent-template
    , servant
    , servant-server
    , text
    , text-class
    , time
    , transformers
    , vector

  hs-source-dirs:
      src
  exposed-modules:
      Cardano.Wallet
      Cardano.Wallet.Api
      Cardano.Wallet.Api.Server
      Cardano.Wallet.Api.Types
      Cardano.Wallet.DB
      Cardano.Wallet.DB.MVar
      Cardano.Wallet.DB.SqliteTypes
      Cardano.Wallet.DB.Sqlite
      Cardano.Wallet.Network
      Cardano.Wallet.Primitive.AddressDerivation
      Cardano.Wallet.Primitive.AddressDiscovery
      Cardano.Wallet.Primitive.CoinSelection
      Cardano.Wallet.Primitive.CoinSelection.LargestFirst
      Cardano.Wallet.Primitive.CoinSelection.Random
      Cardano.Wallet.Primitive.Fee
      Cardano.Wallet.Primitive.Mnemonic
      Cardano.Wallet.Primitive.Model
      Cardano.Wallet.Primitive.Types
      Cardano.Wallet.Transaction
      Data.Quantity
  other-modules:
      Paths_cardano_wallet_core

test-suite unit
  default-language:
      Haskell2010
  default-extensions:
      NoImplicitPrelude
      OverloadedStrings
  ghc-options:
      -threaded -rtsopts
      -Wall
      -O2
  if (!flag(development))
    ghc-options:
      -Werror
  build-depends:
      base
    , aeson
    , aeson-qq
    , async
    , bytestring
    , cardano-crypto
    , cardano-wallet-core
    , containers
    , cryptonite
    , deepseq
    , file-embed
    , fmt
    , generic-arbitrary
    , hspec
    , hspec-golden-aeson
    , http-api-data
    , lens
    , memory
    , QuickCheck
    , quickcheck-instances
    , servant-server
    , servant-swagger
    , swagger2
    , text
    , text-class
    , transformers
    , yaml
    , persistent
    , persistent-sqlite
    , conduit
    , monad-logger
    , mtl
  type:
     exitcode-stdio-1.0
  hs-source-dirs:
      test/unit
  main-is:
      Main.hs
  other-modules:
      Cardano.Wallet.Api.TypesSpec
      Cardano.Wallet.ApiSpec
      Cardano.Wallet.DB.MVarSpec
      Cardano.Wallet.DB.SqliteSpec
      Cardano.Wallet.DBSpec
      Cardano.Wallet.NetworkSpec
      Cardano.Wallet.Primitive.AddressDerivationSpec
      Cardano.Wallet.Primitive.AddressDiscoverySpec
      Cardano.Wallet.Primitive.CoinSelection.LargestFirstSpec
      Cardano.Wallet.Primitive.CoinSelection.RandomSpec
      Cardano.Wallet.Primitive.CoinSelectionSpec
      Cardano.Wallet.Primitive.FeeSpec
      Cardano.Wallet.Primitive.MnemonicSpec
      Cardano.Wallet.Primitive.ModelSpec
      Cardano.Wallet.Primitive.TypesSpec
      Cardano.WalletSpec
      Data.QuantitySpec
