name:                cardano-wallet-jormungandr
version:             2019.7.24
synopsis:            Wallet backend protocol-specific bits implemented using JÃ¶rmungandr
description:         Please see README.md
homepage:            https://github.com/input-output-hk/cardano-wallet
author:              IOHK Engineering Team
maintainer:          operations@iohk.io
copyright:           2019 IOHK
license:             Apache-2.0
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

flag development
    description: Disable `-Werror`
    default: False
    manual: True

library
  default-language:
      Haskell2010
  default-extensions:
      NoImplicitPrelude
      OverloadedStrings
  ghc-options:
      -Wall
      -Wcompat
      -fwarn-redundant-constraints
  if (!flag(development))
    ghc-options:
      -Werror
  build-depends:
      base
    , aeson
    , base58-bytestring
    , bech32
    , binary
    , bytestring
    , cardano-crypto
    , cardano-wallet-core
    , cborg
    , cryptonite
    , deepseq
    , either
    , exceptions
    , filepath
    , fmt
    , http-client
    , http-types
    , memory
    , servant
    , servant-client
    , servant-client-core
    , text
    , text-class
    , time
    , transformers
  hs-source-dirs:
      src
  exposed-modules:
      Cardano.Wallet.Jormungandr.Api
      Cardano.Wallet.Jormungandr.Binary
      Cardano.Wallet.Jormungandr.Compatibility
      Cardano.Wallet.Jormungandr.Environment
      Cardano.Wallet.Jormungandr.Network
      Cardano.Wallet.Jormungandr.Primitive.Types
      Cardano.Wallet.Jormungandr.Transaction

test-suite unit
  default-language:
      Haskell2010
  default-extensions:
      NoImplicitPrelude
      OverloadedStrings
  ghc-options:
      -threaded -rtsopts
      -Wall
      -O2
  if (!flag(development))
    ghc-options:
      -Werror
  build-depends:
      base
    , aeson-qq
    , binary
    , bytestring
    , cardano-wallet-core
    , cardano-crypto
    , cardano-wallet-jormungandr
    , containers
    , directory
    , generic-arbitrary
    , generic-lens
    , hspec
    , memory
    , QuickCheck
    , text
    , text-class
    , time
  build-tools:
      hspec-discover
  type:
     exitcode-stdio-1.0
  hs-source-dirs:
      test/unit
  main-is:
      Main.hs
  other-modules:
      Cardano.Wallet.Jormungandr.BinarySpec
      Cardano.Wallet.Jormungandr.EnvironmentSpec
      Cardano.Wallet.Jormungandr.CompatibilitySpec
      Cardano.Wallet.Jormungandr.TransactionSpec
      Cardano.Wallet.TransactionSpecShared

test-suite integration
  default-language:
      Haskell2010
  default-extensions:
      NoImplicitPrelude
      OverloadedStrings
  ghc-options:
      -threaded -rtsopts
      -Wall
      -O2
  if (!flag(development))
    ghc-options:
      -Werror
  build-depends:
      aeson
    , aeson-qq
    , async
    , base
    , binary
    , bytestring
    , cardano-wallet-cli
    , cardano-wallet-core
    , cardano-wallet-core-integration
    , cardano-wallet-http-bridge
    , cardano-wallet-jormungandr
    , cardano-wallet-launcher
    , command
    , containers
    , cryptonite
    , deepseq
    , directory
    , exceptions
    , extra
    , generic-arbitrary
    , generic-lens
    , hspec
    , hspec-expectations-lifted
    , http-api-data
    , http-client
    , http-types
    , iohk-monitoring
    , memory
    , persistent
    , process
    , QuickCheck
    , retry
    , servant
    , template-haskell
    , temporary
    , text
    , text-class
    , time
    , transformers
    , warp
  type:
     exitcode-stdio-1.0
  hs-source-dirs:
      test/integration
  main-is:
      Main.hs
  other-modules:
      Cardano.Faucet
      Cardano.Wallet.Jormungandr.NetworkSpec
      Test.Integration.Jormungandr.Scenario.API.Transactions
      Test.Integration.Jormungandr.Scenario.CLI.Launcher
      Test.Integration.Jormungandr.Scenario.CLI.Server
