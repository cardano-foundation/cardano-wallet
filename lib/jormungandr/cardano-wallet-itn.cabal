name:                cardano-wallet-itn
version:             2020.4.1
synopsis:            Wallet backend protocol-specific bits implemented using JÃ¶rmungandr
description:         Please see README.md
homepage:            https://github.com/input-output-hk/cardano-wallet
author:              IOHK Engineering Team
maintainer:          operations@iohk.io
copyright:           2018-2020 IOHK
license:             Apache-2.0
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

flag development
    description: Disable `-Werror`
    default: False
    manual: True

library
  default-language:
      Haskell2010
  default-extensions:
      NoImplicitPrelude
      OverloadedStrings
  ghc-options:
      -Wall
      -Wcompat
      -fwarn-redundant-constraints
  if (!flag(development))
    ghc-options:
      -O2
      -Werror
  build-depends:
      base
    , aeson
    , async
    , binary
    , bytestring
    , cardano-crypto
    , cardano-wallet-core
    , cardano-wallet-cli
    , cardano-wallet-launcher
    , containers
    , contra-tracer
    , cryptonite
    , deepseq
    , either
    , exceptions
    , filepath
    , fmt
    , http-client
    , http-types
    , iohk-monitoring
    , lifted-base
    , monad-control
    , monad-loops
    , memory
    , network
    , safe
    , servant
    , servant-client
    , servant-client-core
    , temporary
    , text
    , text-class
    , time
    , transformers
    , warp
    , Win32-network
  hs-source-dirs:
      src
  exposed-modules:
      Cardano.Wallet.Jormungandr
      Cardano.Wallet.Jormungandr.Api
      Cardano.Wallet.Jormungandr.Api.Client
      Cardano.Wallet.Jormungandr.Api.Types
      Cardano.Wallet.Jormungandr.Binary
      Cardano.Wallet.Jormungandr.Rewards
      Cardano.Wallet.Jormungandr.Compatibility
      Cardano.Wallet.Jormungandr.Network
      Cardano.Wallet.Jormungandr.Transaction

executable cardano-wallet-itn
  default-language:
      Haskell2010
  default-extensions:
      NoImplicitPrelude
      OverloadedStrings
  ghc-options:
      -threaded -rtsopts
      -Wall
  if (!flag(development))
    ghc-options:
      -O2
      -Werror
  build-depends:
      base
    , cardano-wallet-cli
    , cardano-wallet-core
    , cardano-wallet-itn
    , cardano-wallet-launcher
    , contra-tracer
    , filepath
    , iohk-monitoring
    , network
    , optparse-applicative
    , process
    , text
    , text-class
  hs-source-dirs:
      exe
  main-is:
      cardano-wallet-itn.hs

