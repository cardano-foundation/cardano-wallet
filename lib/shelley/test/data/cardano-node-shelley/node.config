NodeId:
Protocol: Cardano
RequiresNetworkMagic: RequiresNoMagic
TurnOnLogMetrics: False
TurnOnLogging: True
ViewMode: SimpleView
PBftSignatureThreshold: 1


#     _   _           _       _          ____
#    | | | |_ __   __| | __ _| |_ ___   |  _ \ __ _ _ __ __ _ _ __ ___  ___
#    | | | | '_ \ / _` |/ _` | __/ _ \  | |_) / _` | '__/ _` | '_ ` _ \/ __|
