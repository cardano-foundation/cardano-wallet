name:          delta-store
version:       0.2025.4.16
synopsis:      Facility for storing a Haskell value, using delta types.
homepage:      https://github.com/cardano-foundation/cardano-wallet
author:        Cardano Foundation (High Assurance Lab)
maintainer:    hal@cardanofoundation.org
copyright:     2021 IOHK
license:       Apache-2.0
category:      Web
build-type:    Simple
cabal-version: >=1.10

flag release
  description: Enable optimization and `-Werror`
  default:     False
  manual:      True

library
  default-language:   Haskell2010
  default-extensions:
    NoImplicitPrelude
    OverloadedStrings

  ghc-options:        -Wall -Wcompat -fwarn-redundant-constraints

  if flag(release)
    ghc-options: -Werror

  build-depends:
      base
    , delta-types
    , fmt
    , io-classes    >=1.5.0.0 && <1.6
    , mtl
    , QuickCheck
    , transformers

  hs-source-dirs:     src
  exposed-modules:
    Data.DBVar
    Data.Delta.Update
    Data.Store
    Test.Store

test-suite unit
  default-language:   Haskell2010
  default-extensions:
    NoImplicitPrelude
    OverloadedStrings

  ghc-options:        -threaded -rtsopts -Wall

  if flag(release)
    ghc-options: -O2 -Werror

  build-depends:
      base
    , delta-store
    , delta-types
    , fmt
    , hspec
    , QuickCheck

  build-tool-depends: hspec-discover:hspec-discover
  type:               exitcode-stdio-1.0
  hs-source-dirs:     test/unit
  main-is:            Main.hs
  other-modules:      Data.StoreSpec
