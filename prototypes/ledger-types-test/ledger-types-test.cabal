cabal-version:      3.0
name:               ledger-types-test
version:            0.1.0.0
synopsis:           Machine-readable description of Cardano ledger types
-- description:
bug-reports:        https://github.com/cardano-foundation/cardano-wallet
author:             HAL, Cardano Foundation
maintainer:         hal@cardanofoundation.org
copyright:          2023 Cardano Foundation
license:            Apache-2.0
category:           Cardano

extra-source-files:
    CHANGELOG.md
    README.md
data-files:
    data/Babbage.txt
    data/BabbageTxOut.txt

library
    default-language:
        Haskell2010
    default-extensions:
        NamedFieldPuns
        NoImplicitPrelude
    build-depends:
        base ^>= 4.14.3
      , bytestring
      , containers
      , megaparsec ^>= 9.2.1
      , parser-combinators
    exposed-modules:
        Demo
        Module
        Parser
        Type
        Value
    hs-source-dirs:
        src
