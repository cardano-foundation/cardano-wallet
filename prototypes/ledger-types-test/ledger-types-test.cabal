cabal-version:      3.0
name:               ledger-types-test
version:            0.1.0.0
synopsis:           Machine-readable description of Cardano ledger types
-- description:
bug-reports:        https://github.com/cardano-foundation/cardano-wallet
author:             HAL, Cardano Foundation
maintainer:         hal@cardanofoundation.org
copyright:          2023 Cardano Foundation
license:            Apache-2.0
category:           Cardano

extra-source-files:
    CHANGELOG.md
    README.md
data-files:
    data/Babbage.txt
    data/BabbageTxOut.txt
    data/json/UTxO.txt
    data/json/UTxO_JSON.txt

library
    default-language:
        Haskell2010
    default-extensions:
        NamedFieldPuns
        NoImplicitPrelude
    build-depends:
        base ^>= 4.14.3
      , base16 ^>= 1.0
      , aeson ^>= 2.1.2
      , bytestring
      , containers
      , haskell-src-exts ^>= 1.23.1
      , megaparsec ^>= 9.2.1
      , parser-combinators
      , text
      , yaml
    exposed-modules:
        Demo
        Demo.Embedding
        Demo.Export
        Elaborate
        Embedding
        Export.Haskell
        Export.Haskell.Language
        Export.Haskell.Value.Compiletime
        Export.Haskell.Value.Runtime
        Export.OpenAPI
        Export.OpenAPI.Value
        Module
        Parser
        Type
        Value
    hs-source-dirs:
        src
